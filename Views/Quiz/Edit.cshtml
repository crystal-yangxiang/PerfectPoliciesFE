@model PerfectPoliciesFE.Models.Quiz

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(c => c.QuizId)

            <div class="form-group">
                <label asp-for="QuizTitle" class="control-label"></label>
                <input asp-for="QuizTitle" class="form-control" />
                <span asp-validation-for="QuizTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuizTopic" class="control-label"></label>
                <input asp-for="QuizTopic" class="form-control" />
                <span asp-validation-for="QuizTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuizCreatorName" class="control-label"></label>
                <input asp-for="QuizCreatorName" class="form-control" />
                <span asp-validation-for="QuizCreatorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuizCreatedDate" class="control-label"></label>
                <input asp-for="QuizCreatedDate" class="form-control" />
                <span asp-validation-for="QuizCreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassPercentage" class="control-label"></label>
                <input asp-for="PassPercentage" class="form-control" />
                <span asp-validation-for="PassPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to Previous Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
