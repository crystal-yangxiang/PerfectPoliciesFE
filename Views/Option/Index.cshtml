@model IEnumerable<PerfectPoliciesFE.Models.Option>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Option</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.OptionId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.OptionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionLetter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionIsCorrect)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.QuestionId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.OptionId)
            </td>*@
            @Html.HiddenFor(modelItem => item.OptionId)
            <td>
                @Html.DisplayFor(modelItem => item.OptionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionIsCorrect)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.QuestionId)
            </td>*@
            @Html.HiddenFor(modelItem => item.QuestionId)
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OptionId }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Details", "Details", new { id = item.OptionId }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.OptionId }, new { @class = "btn btn-outline-info" })
            </td>




        </tr>
}
    </tbody>
</table>
